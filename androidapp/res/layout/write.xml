<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/bg" android:orientation="vertical">

	<com.fanfou.app.ui.ActionBar android:id="@id/actionbar"
		style="@style/ActionBar" />

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:scrollbars="none">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:background="@drawable/bg"
			android:orientation="vertical">

			<com.fanfou.app.ui.widget.MyAutoCompleteTextView
				android:id="@id/write_text" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_margin="2dp"
				android:layout_weight="1" android:background="@drawable/input_bg"
				android:gravity="top|left" android:maxLength="150" android:maxLines="7"
				android:minLines="5" android:padding="10dp" android:singleLine="false" />

			<RelativeLayout android:id="@id/write_extras"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@id/write_text" android:layout_marginBottom="6dp"
				android:layout_marginLeft="8dp" android:layout_marginRight="8dp">

				<TextView android:id="@id/write_extra_words" style="@style/Text.Count"
					android:layout_alignParentRight="true" android:gravity="right|center_vertical" />
			</RelativeLayout>

			<ImageView android:layout_width="fill_parent"
				android:layout_height="2dp" android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp" android:background="@drawable/separator" />

			<LinearLayout android:id="@id/write_actions"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal" android:padding="4dp">

				<ImageView android:id="@id/write_action_at"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_weight="1" android:src="@drawable/toolbar_mention" />

				<ImageView android:id="@id/write_action_draft"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_weight="1" android:src="@drawable/i_bar_draft2" />

				<ImageView android:id="@id/write_action_location"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_weight="1" android:src="@drawable/toolbar_geo_off" />

				<ImageView android:id="@id/write_action_gallery"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_weight="1" android:src="@drawable/toolbar_media" />

				<ImageView android:id="@id/write_action_camera"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_weight="1" android:src="@drawable/toolbar_camera" />

			</LinearLayout>

			<RelativeLayout android:id="@id/write_picture"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:gravity="center_vertical" android:paddingTop="4dp"
				android:visibility="gone">

				<ImageView android:id="@+id/write_separator2"
					android:layout_width="fill_parent" android:layout_height="2dp"
					android:layout_alignParentTop="true" android:layout_marginBottom="10dp"
					android:layout_marginLeft="4dp" android:layout_marginRight="4dp"
					android:background="@drawable/separator" />

				<ImageView android:id="@id/write_picture_prieview"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_below="@id/write_separator2"
					android:layout_centerInParent="true" android:layout_margin="8dp" />

				<ImageView android:id="@id/write_picture_remove"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_centerVertical="true" android:layout_toRightOf="@id/write_picture_prieview"
					android:padding="8dp" android:src="@drawable/i_close" />
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>

</LinearLayout>