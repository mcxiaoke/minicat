<?xml version="1.0" encoding="utf-8" standalone="no"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/umeng_xp_normal_banner_background_selector" android:gravity="center" android:id="@+id/umeng_xp_banner" android:layout_height="55dp" android:layout_width="fill_parent">
	<ImageView android:id="@+id/umeng_xp_icon" android:layout_centerVertical="true" android:layout_height="35dp" android:layout_marginLeft="6dp" android:layout_width="35dp" android:src="@drawable/umeng_xp_zhanwei">
	</ImageView>

	<TextView android:id="@+id/umeng_xp_name" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="50dp" android:layout_marginTop="6dp" android:layout_toRightOf="@+id/umeng_xp_icon" android:layout_width="130dp" android:lines="1" android:text="开心听" android:textColor="#000000" android:textSize="14dp">
