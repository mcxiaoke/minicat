	<TextView android:ellipsize="marquee" android:id="@+id/umeng_xp_des" android:layout_alignParentBottom="true" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:layout_marginLeft="5dp" android:layout_marginRight="50dp" android:layout_toRightOf="@+id/umeng_xp_icon" android:layout_width="wrap_content" android:lines="1" android:scrollHorizontally="true" android:text="android上最好的音乐软件" android:textColor="#777777" android:textSize="12dp">
